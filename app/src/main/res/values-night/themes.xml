<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Night application theme -->
    <style name="Theme.Fintech2021" parent="Theme.MaterialComponents.DayNight.DarkActionBar.Bridge">
        <item name="android:navigationBarColor">@color/mtrl_scrim_color</item>
        <!-- Primary colors -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryLightColor</item>
        <!-- Secondary colors -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryDarkColor</item>
        <!-- Text colors -->
        <item name="android:textColorSecondary">@color/secondaryTextColor</item>
        <item name="android:textColorPrimary">@color/primaryTextColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <!-- Pregerences Theme -->
    <style name="Theme.Fintech2021.Preferences"/>
</resources>